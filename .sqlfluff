[sqlfluff]
dialect = mysql
max_line_length = 100
large_file_skip_byte_limit = 162861
exclude_rules = L003, L030, L036, L039, L044

[sqlfluff.core]
sql_file_exts = .sql

[sqlfluff.indentation]
tab_space_size = 4
indent_unit = space

[sqlfluff:rules]
allow_scalar = True

[sqlfluff.rules.capitalisation.keywords]
capitalisation_policy = "upper"